# API Keys for Speech to Text App
# Copy this file to .env and fill in your actual API keys

# Deepgram API Key for speech-to-text transcription
# Get yours at: https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Anthropic Claude API Key for AI text enhancement
# Get yours at: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq API Key for Whisper transcription (Subscription tier)
# Get yours at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Optional: OpenAI API Key (alternative to Claude)
# OPENAI_API_KEY=your_openai_api_key_here

# App Configuration
# Recording mode: "push-to-talk" or "toggle"
DEFAULT_RECORDING_MODE=push-to-talk

# Default hotkey (examples: "Fn+Space", "CmdOrCtrl+Shift+D", "Option+Space")
DEFAULT_HOTKEY=Fn+Space

# Max recording duration in seconds (default: 1800 = 30 minutes)
MAX_RECORDING_DURATION=1800

# Audio quality settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Claude Model Selection
# Options: claude-3-5-sonnet-20241022, claude-3-haiku-20240307
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Deepgram Model Settings
DEEPGRAM_MODEL=nova-2
DEEPGRAM_LANGUAGE=en-US
DEEPGRAM_SMART_FORMAT=true
DEEPGRAM_FILLER_WORDS=true
DEEPGRAM_PUNCTUATE=true