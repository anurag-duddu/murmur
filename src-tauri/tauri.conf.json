{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Keyhold",
  "version": "0.1.0",
  "identifier": "com.keyhold.app",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM5MTgzQkI5QkZFMUVFNzAKUldSdzd1Ry91VHNZeWYvSXdZZU5VcC9rNWd1NmZIV1JUZVFVTFBQcTducHVwemZ3U0cwdUplWHgK",
      "endpoints": [
        "https://github.com/anurag-duddu/murmur/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["keyhold"]
      }
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "login",
        "title": "Keyhold - Sign In",
        "url": "login.html",
        "width": 420,
        "height": 520,
        "visible": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "resizable": false,
        "center": true
      },
      {
        "label": "main",
        "title": "Keyhold - Preferences",
        "width": 400,
        "height": 500,
        "visible": false,
        "skipTaskbar": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "resizable": false,
        "center": true
      },
      {
        "label": "overlay",
        "title": "",
        "url": "overlay.html",
        "width": 500,
        "height": 80,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "shadow": false,
        "focus": false
      },
      {
        "label": "onboarding",
        "title": "Keyhold - Setup",
        "url": "onboarding.html",
        "width": 560,
        "height": 640,
        "visible": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.groq.com https://api.workos.com https://*.sentry.io https://*.ingest.us.sentry.io; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": "Info.plist"
    }
  }
}
